{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "ES2021",
      "DOM",
      "WebWorker"
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "declaration": true,
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.spec.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
